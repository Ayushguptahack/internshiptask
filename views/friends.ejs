<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        *{
            padding: 0;
            margin: 0;
        }
        body{
            background-color: white;
            display: flex;
            width: 100%;
            height: 100vh;
        }
        .tab{
            flex: 1;
            background-color: rgba(133, 42, 218, 0.795);
            height: 100%;
            display: flex;
            flex-direction: column;
        }
        .content{
            flex: 3;
            background-color: whitesmoke;
            height: 100%;
            width: 100%;
            display: flex;
            flex-direction: column;
        }
        .data{
            display: flex;
            justify-content: space-around;
            align-items: center;
            background-color: rgb(236, 173, 236);
            width: 100%;
            height: 14.5%;
            border-bottom: 1px solid rgb(153, 20, 153);
        }
        .data:hover{
            background-color: rgb(233, 200, 233);
        }
        .data img{
            margin: 20px;
            width: 100px;
            height: 100px;
            border-radius: 50%;
        }
        .tab a{
            text-decoration: none;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 7%;
            border-bottom: 1px solid black;
            color: White;
            font-size:20px;
            font-weight: 500;
            transition: .5s;
        }
        .tab a:hover{
            background-color: whiteSmoke;
            color: rgb(104, 23, 104);
        }
        .tab a:nth-child(3){
            background-color: whiteSmoke;
            color: rgb(104, 23, 104);
            border: 2px solid rgb(104, 23, 104);
        }
    </style>
</head>
<body>
    <div class="tab">
        <a href="/myprofile"> My Profile</a>
        <a href="/allpeoples">All Peoples</a>
        <a href="/myfriends">My Friends</a>
    </div>
    <div class="content" id="content">
        <!-- <div class="data">
            <img src="./Images/default.jpg" alt="No image found">
            <h1>Ayush Gupta</h1>
        </div> -->
    </div>
</body>
<script>
    let content = document.getElementById("content");
    var objdata = '<%- JSON.stringify(data) %>';
    var objval = JSON.parse(objdata);
    console.log(objval);

    for(let i in objval){
        let name = objval[i].name;
        let imgsrc = objval[i].profile_image;

        var data = document.createElement("div");
        data.setAttribute("class","data");

        var img = document.createElement("img");
        img.setAttribute("src",`${imgsrc}`);
        img.setAttribute("alt","No image found");

        var h1 = document.createElement("h1");
        h1.innerHTML = `${name}`;

        data.appendChild(img);
        data.appendChild(h1);

        content.appendChild(data);
    }
</script>
</html>